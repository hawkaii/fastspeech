# Example .env configuration file for Indic TTS API
# Copy this to .env and customize for your deployment

# Google Cloud Storage bucket for models
GCS_BUCKET=gs://your-indic-tts-bucket

# Device configuration
DEVICE=cuda  # or 'cpu'

# Models to preload at startup (comma-separated language:gender pairs)
PRELOAD_MODELS=hindi:female

# Model storage directory (inside container)
MODELS_DIR=/models

# Server configuration
PORT=8080
WORKERS=1
LOG_LEVEL=info

# Text processing limits
MAX_TEXT_LENGTH=5000
CHUNK_WORDS=100

# Audio configuration
SAMPLING_RATE=22050
